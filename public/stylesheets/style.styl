@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Quicksand')

global-reset()

main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Quicksand'
  background-color main-color
  color #fff
  text-shadow 0px -1px 0px darken(main-color, 30%)
  text-align center

.top
  width 60px
  margin 5px auto
  font-size 14px
  padding 5px
  border-bottom 1px solid #ccc
  
header
  width 500px
  padding 50px 10px 20px 10px
  margin auto
  font-size 25px
  background-color main-color
  border-bottom 1px dotted #ccc
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  margin 50px auto
  font-size 20px

  ul
    margin auto

footer
  width 500px
  text-align center
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
